<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
              <h2>User info</h2>
                <%= link_to user_path do %>
                   <%= image_tag @user.get_profile_image(100,100) %>
                <% end %>
                  <table class="table">
                      <tr>
                      <th>name</th>
                      <th><%= @user.name %></th>
                      </tr>
                      <tr>

                      <th>introduction</th>
                      <th><%= @user.introduction %></th>
                      </tr>
                  </table>

                  <div class='row'>
                    <%= link_to  edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
                      <i class="fas fa-user-cog"></i>
                    <% end%>
                  </div>
                  <h1>New book</h1>
                    <%= form_with model: @book_new do |f| %>
                  <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: 'form-control book_title' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :opinion %>
                    <%= f.text_area :body, class: 'form-control book_body' %>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Create Book" , class: 'btn btn-success' %>
                  </div>
                    <% end %>
    </div>
   <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
          <table class='table table-hover table-inverse'>
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                  <tr>
        　　　     　　  <td>
                      <%= image_tag @user.get_profile_image(100,100) %><br>
                      <%= link_to @user.name, user_path(@user) %>
                    </td>
                    <td><%= link_to @book.title, book_path %></td>
                    <td><%= @book.body %></td>
                    <td>
                    <% if @user.id == current_user.id %>
                      <td>
                      <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-group-sm btn-success" %>
                      </td>
                      <td>
                      <%= link_to "Destroy", book_path(@book.id) , method: :delete, class:"btn btn-danger btn-group-sm"  %>
                      </td>
                    <% end %>
                </tr>
              </tbody>
          </table>
    </div>
</div>


